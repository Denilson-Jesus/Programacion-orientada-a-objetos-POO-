package inventario_tienda_repuestos;
import java.util.Scanner;
import librerias.*;
public class Inventario_Tienda_Repuestos {
     public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Inventario inventario = new Inventario();

        int opcion;
        do {
            System.out.println("\n=== MENU INVENTARIO ===");
            System.out.println("1. Agregar producto");
            System.out.println("2. Restar producto");
            System.out.println("3. Ver lista de productos");
            System.out.println("4. Ingresar proveedor");
            System.out.println("5. Ver lista de proveedores");
            System.out.println("6. Salir");
            System.out.print("Seleccione una opción: ");
            opcion = sc.nextInt();
            sc.nextLine();

            switch (opcion) {
                case 1:
                    System.out.print("Código: ");
                    String codigo = sc.nextLine();
                    System.out.print("Nombre: ");
                    String nombre = sc.nextLine();
                    System.out.print("Cantidad: ");
                    int cantidad = sc.nextInt();
                    System.out.print("Precio: ");
                    double precio = sc.nextDouble();
                    sc.nextLine();

                    // Pedir proveedor
                    System.out.print("Nombre del proveedor: ");
                    String nomProv = sc.nextLine();
                    System.out.print("RUC: ");
                    String ruc = sc.nextLine();
                    System.out.print("Teléfono: ");
                    String tel = sc.nextLine();
                    Proveedor proveedor = new Proveedor(nomProv, ruc, tel);

                    inventario.agregarProveedor(proveedor);
                    inventario.agregarProducto(new Producto(codigo, nombre, cantidad, precio, proveedor));
                    break;

                case 2:
                    System.out.print("Código del producto: ");
                    String cod = sc.nextLine();
                    System.out.print("Cantidad a restar: ");
                    int cant = sc.nextInt();
                    inventario.restarProducto(cod, cant);
                    break;

                case 3:
                    inventario.mostrarProductos();
                    break;

                case 4:
                    System.out.print("Nombre del proveedor: ");
                    String nom = sc.nextLine();
                    System.out.print("RUC: ");
                    String rucProv = sc.nextLine();
                    System.out.print("Teléfono: ");
                    String telProv = sc.nextLine();
                    inventario.agregarProveedor(new Proveedor(nom, rucProv, telProv));
                    break;

                case 5:
                    inventario.mostrarProveedores();
                    break;

                case 6:
                    System.out.println("Saliendo del programa...");
                    break;

                default:
                    System.out.println("Opción inválida.");
            }
        } while (opcion != 6);
    }
}
