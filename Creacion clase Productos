package librerias;
public class Producto extends ItemInventario implements Descontable, Aumentable {
    private int cantidad;
    private double precio;
    private Proveedor proveedor;  

    public Producto(String codigo, String nombre, int cantidad, double precio, Proveedor proveedor) {
        super(codigo, nombre); 
        this.cantidad = cantidad;
        this.precio = precio;
        this.proveedor = proveedor;
    }

    @Override
    public void restarCantidad(int cantidad) {
        if (this.cantidad >= cantidad) {
            this.cantidad -= cantidad;
            System.out.println(" Se restaron " + cantidad + " unidades de " + nombre);
        } else {
            System.out.println(" No hay suficiente stock.");
        }
    }

    @Override
    public void agregarCantidad(int cantidad) {
        this.cantidad += cantidad;
        System.out.println("Se agregaron " + cantidad + " unidades de " + nombre);
    }

    @Override
    public void mostrarInfo() { 
        System.out.println(this);
    }

    @Override
    public String toString() {
        return "CÃ³digo: " + codigo +
               ", Nombre: " + nombre +
               ", Cantidad: " + cantidad +
               ", Precio: " + precio +
               ", " + proveedor;
    }
}
